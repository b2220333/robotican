<?xml version="1.0"?>
<launch>

  <master auto="start"/>

  <arg name="base_global_planner" default="navfn/NavfnROS"/>
  <arg name="base_local_planner" default="dwa_local_planner/DWAPlannerROS"/>


  <!-- Run the map server -->
  <arg name="map_file" default="$(find robotican_demos)/maps/map.yaml"/>
  <node name="map_server" pkg="map_server" type="map_server" args="$(arg map_file)" />

  <!--- Run AMCL -->
  <include file="$(find robotican_armadillo)/navigation/launch/amcl_diff.launch" />

  <!--- Run Move Base -->
  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen" >
    <param name="base_global_planner" value="$(arg base_global_planner)"/>
    <param name="base_local_planner" value="$(arg base_local_planner)"/>  
    <rosparam file="$(find robotican_armadillo)/navigation/config/move_base_params.yaml" command="load"/>
    <rosparam file="$(find robotican_armadillo)/navigation/config/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find robotican_armadillo)navigation/config/costmap_common_params.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find robotican_armadillo)/navigation/config/local_costmap_params.yaml" command="load" ns="local_costmap" />
    <param name="local_costmap/width" value="3.0"/>
    <param name="local_costmap/height" value="3.0"/> 
    <rosparam file="$(find robotican_armadillo)/navigation/config/global_costmap_params.yaml" command="load" ns="global_costmap"/>
  <remap from="cmd_vel" to="/mobile_base_controller/cmd_vel" />
    </node>

</launch>
